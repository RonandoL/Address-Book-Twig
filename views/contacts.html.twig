<!DOCTYPE html>
<html>
<head>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css' integrity='sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7' crossorigin='anonymous'>
    <link rel='stylesheet' href='css/styles.css'>
    <title>Address Book</title>
</head>

<body>
    <div class='jumbotron'>
        <div class="container">
            <h1>Address Book</h1>
            <p>Enter contact, view all your contacts, delete all your contacts</p>
        </div>
    </div>

<!-- Row: 1 -->
    <div class='container'>
    <div class='row addressRow'>
        <div class='col-sm-6'>
            <form action='/contact' method='post'>
                <h2>Enter your contact</h2>

                <div class='form-group'>
                    <label for='name'>Name:</label>
                    <input type='text' name='name' class="form-control" id='name'>
                </div>

                <div class='form-group'>
                    <label for='phone'>Phone:</label>
                    <input type='text' name='phone' class="form-control" id='phone'>
                </div>

                <div class='form-group'>
                    <label for='street'>Street:</label>
                    <input type='text' name='street' class="form-control" id='street'>
                </div>

                <div class='form-group'>
                    <label for='city'>City:</label>
                    <input type='text' name='city' class="form-control" id='city'>
                </div>

                <div class='form-group'>
                    <label for='state'>State:</label>
                    <input type='text' name='state' class="form-control" id='state'>
                </div>

                <div class='form-group'>
                    <label for='zip'>Zip:</label>
                    <input type='text' name='zip' class="form-control" id='zip'>
                </div>

                <button class='btn btn-success' type='submit'>Submit Address</button>
            </form>

        <!-- Delete Contacts =================== -->
            <form action="delete_contacts" method="post" class="delete">
                <button class="btn btn-danger" type="submit">Delete my shit!</button>
            </form>

        </div>  <!-- /col-sm-6 -->
    </div>  <!-- /ROW -->

<!-- RESULTS ============================================ -->
<!-- Row: 2 -->
    <div class="row">

    <!-- Display New Contact -->
        {% if newContact is not empty %}
        <h3>Your new contact:</h3>
        <div class="col-sm-6 new_contact">
            <ul>
                <li class="name"><strong>{{ newContact.getName }} </strong></li>
                <li><strong>Phone: </strong> {{ newContact.getPhone }}</li>
                <li><strong>Street: </strong> {{ newContact.getStreet }}</li>
                <li><strong>City: </strong> {{ newContact.getCity }}</li>
                <li><strong>State: </strong> {{ newContact.getState }}</li>
                <li><strong>Zip: </strong> {{ newContact.getZip }}</li>
            </ul>
            <hr>

        </div>
        {% endif %}
    </div>  <!-- /row -->

    <!-- Display All Contacts -->
    <div class="row">
    {% if contacts is not empty %}
        <h3>All of your contacts:</h3>
        {% for contact in contacts %}
            {% if contact != newContact %}
        <div class="col-sm-6 contactBox">
                        <ul>
                            <li class="name"><strong>{{ contact.getName }} </strong></li>
                            <li><strong>Phone: </strong> {{ contact.getPhone }}</li>
                            <li><strong>Street: </strong> {{ contact.getStreet }}</li>
                            <li><strong>City: </strong> {{ contact.getCity }}</li>
                            <li><strong>State: </strong> {{ contact.getState }}</li>
                            <li><strong>Zip: </strong> {{ contact.getZip }}</li>
                        </ul>
                        <hr>
        </div>
        {% endif %}
    {% endfor %}        
    {% endif %}

    </div>   <!-- /ROW -->











    </div>
</body>
</html>
